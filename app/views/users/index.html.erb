<div class="col-md-2">

</div>
<div class="col-md-10 main">
<p id="notice"><%= notice %></p>
<div class="row">

  <div class="col-lg-12">
    <h1 class="page-header">Lista de encontreiros<a style="margin-left:100px;" href="/users/new"><button type="button" class="btn btn-outline-primary">Novo encontreiro</button></a></h1>
  </div>
</div><!--/.row-->

<table id="mytable" class="table table-bordred table-striped">

                  <thead>
    <tr>
      <th>Nome</th>
      <th>Contato</th>
      <th>Saldo</th>
      <th>Team</th>
      <th>Detalhes</th>
      <th>Editar</th>
      <th>Deletar</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.nome %></td>
        <td><%= user.contato %></td>
        <td><%= user.saldo %></td>
        <td><%= user.team.nome %></td>
        <td><p data-placement="top" data-toggle="tooltip" title="show"><button class="btn btn-info btn-xs" ><%= link_to 'Show', user %></button></p></td>
      <td><p data-placement="top" data-toggle="tooltip" title="Edit"><button class="btn btn-primary btn-xs" ><%= link_to 'Edit', edit_user_path(user) %></button></p></td>
      <td><p data-placement="top" data-toggle="tooltip" title="Delete"><button class="btn btn-danger btn-xs"  ><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></button></p></td>

      </tr>
    <% end %>
  </tbody>
</table>
<script>
  $(document).ready(function(){
 myFunction();
});
    function myFunction() {
          document.getElementById("navusers").classList.add('active');
    }
  </script>
