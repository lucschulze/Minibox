<div class="col-md-2">

</div>
<div class="col-md-10 main">

<div class="row">

  <div class="col-lg-12">
    <h1 class="page-header">Em desenvolvimento</h1>
  </div>
</div><!--/.row-->

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Preco</th>
      <th>Quantidade</th>
      <th>Foto</th>
      <th>Team</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.nome %></td>
        <td><%= product.preco %></td>
        <td><%= product.quantidade %></td>
        <td><%= product.foto %></td>
        <td><%= product.team.nome %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>
